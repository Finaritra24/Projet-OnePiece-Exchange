@page
@model OnePiece.Pages_Pirates.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Budget</h1>

<h4>Ajouter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
            <input type="hidden" asp-for="Pirate.PirateID" />

            <div class="form-group">
                <label asp-for="Pirate.Budget" class="control-label"></label>
                <input asp-for="Pirate.Budget" class="form-control" />
                <span asp-validation-for="Pirate.Budget" class="text-danger"></span>
            </div>
    
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


