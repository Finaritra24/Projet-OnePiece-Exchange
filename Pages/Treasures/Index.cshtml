@page
@model OnePiece.Pages_Treasures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Treasure[0].Denomination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Treasure[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Treasure[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Treasure[0].Pirate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Treasure) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denomination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pirate.PirateID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TreasureID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TreasureID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TreasureID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
