@page
@model OnePiece.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}
<h2>Connexion</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Denomination"></label>
        <input asp-for="Input.Denomination" class="form-control" />
        <span asp-validation-for="Input.Denomination" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>